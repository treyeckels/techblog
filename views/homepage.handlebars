<!-- Loop over each object in the projects array -->
{{#each blogs as |blog|}}
  <div class='row'>
    <div class='card'>
      <div class='card-header'>{{blog.title}}</div>
      <div class='card-body'>
        <p class='card-text'>
          {{blog.content}}
        </p>
        <a href='/blogs/{{id}}' class='btn btn-primary'>View Full Blog</a>
      </div>
      <div class='card-footer text-muted'>
        Posted by
        {{blog.user.username}}
        on
        {{blog.createdAt}}
      </div>
    </div>
  </div>
{{/each}}